#include "main.c"

/**
 * printBinary - this convert integer to binary
 * @num: the input integer
 * Return: the lenght
 */

int printBinary(int num)
{
	int binary[64];
	int i = 0, j;
	int count = 0;

	if (num < 0)
	{
		putchar('-');
		count += num = -num;
	}

	if (num == 0) {
		putchar('0');
		return;
		count++
	}

	while (num > 0)
	{
		binary[i] = num % 2;
		num = num / 2;
		i++;
		count++
	}

	for (j = i - 1; j >= 0; j--)
	{
		putchar(binary[j] + '0');
		count++
	}
	return (count);
}
